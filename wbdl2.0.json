{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.spintheweb.org/wbdl2.0.json",
    "title": "Webbase Description Language",
    "description": "A language for describing web portals, their structure, and content.",
    "type": "object",
    "properties": {
        "_id": {
            "description": "The unique identifier of the webbase",
            "type": "string",
            "pattern": "^[0-9a-zA-Z]{22}$"
        },
        "type": {
            "description": "The type of the object (site is a singleton)",
            "type": "string",
            "enum": [
                "site",
                "area",
                "page",
                "content"
            ]
        },
        "name": {
            "$ref": "#/$defs/translation"
        },
        "visibility": {
            "type": [
                "object",
                "null"
            ],
            "patternProperties": {
                "^([a-z0-9_]{1,25})?$": {
                    "type": [
                        "boolean",
                        "null"
                    ]
                }
            }
        },
        "children": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        }
    },
    "required": [
        "type",
        "_id",
        "name",
        "slug"
    ],
    "unevaluatedProperties": false,
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "site"
                    }
                }
            },
            "then": {
                "properties": {
                    "lang": {
                        "type": "string",
                        "pattern": "^([a-z]{2}(-[A-Z]{2})?)$"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "mainpage": {
                        "description": "The main page identifier",
                        "type": [
                            "string",
                            "null"
                        ],
                        "pattern": "^[0-9a-zA-Z]{22}$"
                    },
                    "slug": {
                        "type": "string",
                        "format": "uri"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "keywords": {
                        "$ref": "#/$defs/translation"
                    },
                    "description": {
                        "$ref": "#/$defs/translation"
                    },
                    "children": {
                        "description": "Child objects of type area, page, or content",
                        "type": "array",
                        "items": {
                            "allOf": [
                                {
                                    "$ref": "#"
                                },
                                {
                                    "properties": {
                                        "type": {
                                            "enum": [
                                                "area",
                                                "page",
                                                "content"
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "area"
                    }
                }
            },
            "then": {
                "properties": {
                    "mainpage": {
                        "description": "The main page identifier",
                        "type": [
                            "string",
                            "null"
                        ],
                        "pattern": "^[0-9a-zA-Z]{22}$"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "keywords": {
                        "$ref": "#/$defs/translation"
                    },
                    "description": {
                        "$ref": "#/$defs/translation"
                    },
                    "slug": {
                        "$ref": "#/$defs/translation"
                    },
                    "children": {
                        "description": "Child objects of type area, page, or content",
                        "type": "array",
                        "items": {
                            "allOf": [
                                {
                                    "$ref": "#"
                                },
                                {
                                    "properties": {
                                        "type": {
                                            "enum": [
                                                "area",
                                                "page",
                                                "content"
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "page"
                    }
                }
            },
            "then": {
                "properties": {
                    "keywords": {
                        "$ref": "#/$defs/translation"
                    },
                    "description": {
                        "$ref": "#/$defs/translation"
                    },
                    "slug": {
                        "$ref": "#/$defs/translation"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "template": {
                        "type": "string"
                    },
                    "children": {
                        "description": "Child objects of type content only",
                        "type": "array",
                        "items": {
                            "allOf": [
                                {
                                    "$ref": "#"
                                },
                                {
                                    "properties": {
                                        "type": {
                                            "enum": [
                                                "content"
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "type": {
                        "const": "content"
                    }
                }
            },
            "then": {
                "properties": {
                    "slug": {
                        "$ref": "#/$defs/translation"
                    },
                    "subtype": {
                        "type": "string",
                        "enum": [
                            "text",
                            "serversidecode"
                        ]
                    },
                    "section": {
                        "type": "string"
                    },
                    "sequence": {
                        "type": "number"
                    },
                    "dsn": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "query": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "parameters": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "layout": {
                        "$ref": "#/$defs/translation"
                    },
                    "cssClass": {
                        "description": "CSS class for styling",
                        "type": "string"
                    }
                }
            }
        }
    ],
    "$defs": {
        "translation": {
            "type": "object",
            "patternProperties": {
                "^([a-z]{2}(-[A-Z]{2})?)$": {
                    "type": "string"
                }
            }
        }
    }
}